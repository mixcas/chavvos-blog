@import "resets"

// Grid of 12 90px columns with 16px gutter
// generated by https://github.com/patrickbest/css-gridgen-mystyle
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// VARIABLES

$margin-small = ($gutter)
$margin-basic = ($gutter*2)
$margin-large = ($gutter*5)

$font-size-basic = 20px
$font-leading-basic = 1.5em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14,14,14)
$color-white-soft = rgb(253,253,253)

// TYPOGRAPHY

body
  font-family: 'Oswald', helvetica,arial,sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 6em
  line-height: 1.6
  font-style: italic

h2
  font-size: 2em
  line-height: 1.6
  font-style: italic
  margin: 15px 0

h3
  font-size: 1.5em

p
  margin-bottom: 1em
  font-weight: lighter


// LINKS

a,a:active,a:visited
  color:inherit
  transition:opacity .2s
  text-decoration: none
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

#main-container
  padding: 30px 10px

#main-content,
#footer
  max-width: 700px
  margin: 0 auto

//the 100% widths are just so stylus can compile delete as desired

// HEADER

#header
  width: 100%
  text-align: center

// POSTS LOOP

#posts
  width: 100%

.post
  width: 100%
  border-bottom: 1px solid rgba(0, 0, 0, 0.1)
  margin-bottom: 60px
  padding-bottom: 30px

  h2
    text-transform: uppercase

  img
    max-width: 100%

  p a
    text-decoration: underline
    

#pagination
  width: 100%
  text-align: center;

// FOOTER

#footer
  width: 100%
  padding: 30px 0
  text-align: center



// UTILITY
.u-video-wrapper
  position: relative
  padding-bottom: 56.25% /* 16:9 */
  padding-top: 25px
  height: 0

.u-video-wrapper iframe
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%

// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
  
  h1
    font-size: 13vw
